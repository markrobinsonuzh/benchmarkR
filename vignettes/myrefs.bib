pages = {113--128},
title = {{Bayesian analysis of RNA sequencing data by estimating multiple shrinkage priors}},
url = {http://biostatistics.oxfordjournals.org/content/14/1/113.abstract},
volume = {14},
year = {2013}
}
@article{Dillies2012b,
