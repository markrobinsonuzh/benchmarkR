month = jul,
title = {{Benchmark Analysis of Algorithms for Determining and Quantifying Full-length mRNA Splice Forms from RNA-Seq Data}},
url = {http://www.biorxiv.org/content/early/2014/07/14/007088.abstract},
year = {2014}
