journal = {BMC Bioinformatics},
keywords = {Alternative Splicing,Chromosome Mapping,DNA,DNA Probes,Databases,Genetic,Internet,Oligonucleotide Array Sequence,RNA Splice Sites,Rambaldi2007,Sequence Analysis,Software,genetics,instrumentation/methods,methods},
mendeley-tags = {Rambaldi2007},
