journal = {BMC Bioinformatics},
keywords = {DNA,DNA: instrumentation,Equipment Design,Equipment Failure Analysis,Gene Expression Profiling,Gene Expression Profiling: instrumentation,Oligonucleotide Array Sequence Analysis,Oligonucleotide Array Sequence Analysis: instrumen,Reproducibility of Results,Sensitivity and Specificity,Sequence Analysis},
